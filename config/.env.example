# Configuración de base de datos
SQLALCHEMY_DATABASE_URI=sqlite:///instance/flaskdb.sqlite

# Configuración de seguridad
SECRET_KEY=your-secret-key-here-change-in-production
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# Configuración de correo
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Configuración de PayU (para pagos)
PAYU_API_KEY=your-payu-api-key
PAYU_API_LOGIN=your-payu-api-login
PAYU_MERCHANT_ID=your-payu-merchant-id
PAYU_ACCOUNT_ID=your-payu-account-id
PAYU_TEST_MODE=True

# Configuración de caché
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# Configuración de Flask
FLASK_ENV=development
FLASK_DEBUG=True

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de uploads
UPLOAD_FOLDER=app/static/product_images
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de rate limiting
RATELIMIT_DEFAULT=10 per minute
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# Configuración de sesión
SESSION_TYPE=filesystem
SESSION_FILE_DIR=instance/sessions

# Configuración de base de datos PostgreSQL (opcional para producción)
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost/dbname

# Configuración de Twilio (para envío de SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890